{% extends 'default/base_admin.html.twig' %}
{% block title %}Mise a jour de l'ouvrage "{{ ouvrage.title }}"{% endblock %}
{%  block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <h1 class="jumbotron container mt-4">Mise à jour de l'ouvrage "{{ ouvrage.title }}"</h1>
    <div class="container">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <label for="" class="text-dark">Illustration/couverture</label>
            {{ form_row(form.picture, {'attr': {'value' : ouvrage.picture}}) }}
        </div>
        <div class="form-group">
            <label for="" >Titre</label>
            {{ form_row(form.title) }}
        </div>
        <div class="form-group">
            <label for="" >Sous Titre</label>
            {{ form_row(form.sub_title) }}
        </div>
        <div class="form-group">
            <label for="">Genre</label>
            {{ form_row(form.genre) }}
        </div>
        <div class="form-group">
            <label for="editor" >Résumé</label>
            {{ form_widget(form.resume, {'attr': {'hidden': 'hidden'}})}}
        </div>
        <div class="form-group">
            <label for="" >Auteur</label>
            {{ form_row(form.author) }}
        </div>
        <div class="form-group">
            <label for="" >Editeur</label>
            {{ form_row(form.editor) }}
        </div>
        <div class="form-group">
            <label for="">Numero ISBN</label>
            {{ form_row(form.isbnumber) }}
        </div>
        <button type="submit" class="btn btn-outline-warning">Modifier</button>
        {{ form_end(form) }}
        {{ dump(form.picture) }}
    </div>

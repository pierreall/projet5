<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.1/cosmo/bootstrap.min.css" rel="stylesheet" integrity="sha384-e5ln1YQrCh2KTj0GVDWxOfDZ53Fd5Uss2u08OZUtzZNrxWfeYC4P7VBWHRDPvJUk" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
{% block body %}
    {% block header %}
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: teal;/*#AB47BC;*/">
                {#<a class="navbar-brand" href="#">Navbar</a>#}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                            <a class="nav-link" href="/"><i class="fas fa-home fa-lg"></i> Accueil</a>
                        </li>
                        <li class="nav-item {% if mainNavBooks is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('admin_ouvrage_classic_showAll')}}"><i class="fab fa-searchengin fa-lg"></i> Les ouvrages</a>
                        </li>
                       <li class="nav-item {% if mainNavGestBooks is defined %}active{% endif %}">
                           <a class="nav-link"  href="{{ path('admin_ouvrage_managementAll')}}"><i class="fas fa-book fa-lg"></i> Gestion des ouvrages</a>

                       </li>
                        <li class="nav-item {% if mainNavGestUsers is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('user_showAll')}}"><i class="fas fa-users fa-lg"></i> Gestion utilisateurs</a>
                        </li>
                        <li class="nav-item {% if mainNavProfil is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('user_profil_admin') }}"><i class="fas fa-user-circle fa-lg"></i> Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt fa-lg"></i> DÃ©connexion</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-default my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </nav>
        </header>
        {# you can read and display just one flash message type... #}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info alert-dismissible" role="alert" id="message">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <div class="flash-notice">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endblock %}

    <br>

    {% block footer %}

    {% endblock %}

{% endblock %}
{% block javascripts %}
    <script>
        setTimeout(function() {
            document.getElementById('message').remove();
        },5000);
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>

{% extends 'default/base_admin.html.twig' %}
{% block title %}Mise à jour de mon compte{% endblock %}
{%  block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

<h1 class="jumbotron container mt-4">Mise à jour de mon compte</h1>
<div class="container">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        <div class="bmd-label-floating">
                {{ form_label(form.username) }}
            </div>
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <label for="">Votre email</label>
        {{ form_row(form.email) }}
    </div>

    <div class="form-group">
        <label for="oldpassword">Mon ancien mots de passe</label>

        {#<input type="password" name="oldpassword" id="oldpassword" class="form-control">#}

        {{ form_row(form.oldPassword) }}



            <label for="">Entrez votre nouveau mdp</label>
            {{ form_row(form.password) }}

            {#<div class="alert alert-info">désolé le mot de passe est incorect</div>#}

    </div>
    <button type="submit" class="btn btn-outline-warning">Modifier</button>
    {{ form_end(form) }}
</div>
{% endblock %}
{% extends 'default/base_admin.html.twig' %}
{% block title %}Mise à jour de mon compte{% endblock %}
{%  block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <h1 class="jumbotron display-4 container mt-4">Mise à jour de mon compte</h1>
    <div class="container">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <label for="">Mon Nom :</label>
            {{ form_row(form.username) }}
        </div>
        <div class="form-group">
            <label for="">Mon email :</label>
            {{ form_row(form.email) }}
        </div>


        <div class="form-group">
            <label for="">Mon mot de passe actuel ou Mon nouveau :</label>
            {{ form_row(form.password) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-warning">Modifier</button>
        </div>
        {{ form_end(form) }}
    </div>



{% endblock %}